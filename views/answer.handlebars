<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Answer Question</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    {{#if errors}}
    {{#each errors}}
    <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
    {{/if}}
</div>
<div class="row">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>{{tempQuestion.content}}</h3>
            </div> <!-- /.panel-heading -->
            <div class="panel-body">
                <form method="post" action="/users/answer">
                    <div class="form-group">
                        {{!-- <label>Name</label> --}}
                        <textarea class="form-control" rows="6" cols="121" placeholder="Answer" name="ansContent" style="resize: none;"></textarea>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary mx-auto">Answer</button>
                    <br>
                </form>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>